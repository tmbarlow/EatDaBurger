<div class="jumbotron">
  <div class"container">
    <br><br>
  <h2 class="text-center">Current Burgers</h2>
  
  <ul style="list-style-type:none">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <p>
            {{this.burger_name}}
          </p>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true" class="form-control">
            <button type="submit" class="btn btn-outline-danger text-center">Eat ME!</button>
          </form>
          <hr>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
 
</div>
 <div class="container">
      <br><br>
      <h2 class="text-center">Eaten Burgers</h2>
      <ul style="list-style-type:none">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <p>
                {{this.burger_name}}
              </p>
           
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
             <button type="submit" class="btn btn-outline-danger">Bye Now!</button>
             </form>
          <hr>
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

</div>
<div class="row">
    <div class="container">
      <br>
        <form class="create-update-form" action="burgers/create" method="POST">
          <h2 class="text-center">Add a Burger</h2>
          <div class="form-group row">
            <label for="newBurger"><p>Burger Name:</p></label>
              <div class="col-sm-10">
                <input type="hidden" name="devoured" value="0" class="form-control">
                </div>
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-outline-success"
          >Add Burger</button>
        </form>
      </div>
    </div>

   

